{
  "name": "hostel-management-system",
  "version": "1.0.0",
  "description": "A hostel management system for Rustamji Institute of Technology",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js",
    "prepare": "husky install",
    "dev": "nodemon app.js --exec \"eslint --quiet . && node\"",
    "pretest": "eslint ./",
    "lint": "prettier --write --ignore-unkown"
  },
  "lint-staged": {
    "[*.{js,html,jsx,css}]": [
      "npm run pretest",
      "npm run lint"
    ]
  },
  "eslintIgnore": [
    "client/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/preIdiot/Hostel-Management-System.git"
  },
  "author": "PreIdiot",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/preIdiot/Hostel-Management-System/issues"
  },
  "homepage": "https://github.com/preIdiot/Hostel-Management-System#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chalk": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http-errors": "^1.7.2",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.13.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "prettier": "2.3.2"
  }
}
